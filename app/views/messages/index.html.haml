.wrapper

  = render partial: 'template/chat_side'

  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group
          - @group.group_users.each do |group_users| 
            = group_users.group.name  
          -# - @groups.each do |group|
          -#   = group.name
        %ul.main-header__left-box__member-list 
          Member:
          %li.main-header__left-box_member-list__member 
            - @group.group_users.each do |group_users| 
              = group_users.user.name 
      .main-header__right-box
        = link_to edit_group_path(@group) do
          Edit
          -# = fa_icon 'cog', class: 'icon'
    
    .messages
      = render partial: 'message', collection: @messages
      
    .form
      = form_for [@group, @message], html: { class: "new-message" } do |f|
        .input-box
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'

